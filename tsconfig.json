{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "isolatedModules": true,
    "stripInternal": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**", "**/__tests__/**"]
}
