{
    "compilerOptions": {
        "target": "es2017",
        "module": "ESNext",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "lib": ["ESNext", "DOM"],
        "isolatedModules": true,
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/__tests__/**"]
}
