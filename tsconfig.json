{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "isolatedModules": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@*": ["./src/*"]
    },
    "baseUrl": "./"
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/**"]
}
