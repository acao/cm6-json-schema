{
  "name": "codemirror-json-schema",
  "license": "MIT",
  "version": "0.2.0",
  "description": "A JSONSchema enabled mode for codemirror 6, for both json4 and json5, inspired by monaco-json",
  "contributors": [
    {
      "name": "Samuel Imolorhe",
      "url": "https://xkoji.dev/"
    },
    {
      "name": "Rikki Schulte",
      "url": "https://rikki.dev"
    }
  ],
  "keywords": [
    "codemirror",
    "codemirror6",
    "jsonschema",
    "jsonschema-validation",
    "json5",
    "json",
    "editor"
  ],
  "type": "module",
  "packageManager": "pnpm@8.6.6",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "docs"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./json5": {
      "import": "./dist/json5.js",
      "types": "./dist/json5.d.ts"
    }
  },
  "repository": "github:acao/codemirror-json-schema",
  "homepage": "https://codemirror-json-schema.netlify.app/",
  "dependencies": {
    "@sagold/json-pointer": "^5.1.1",
    "@types/json-schema": "^7.0.12",
    "json-schema": "^0.2.3",
    "json-schema-library": "^8.0.0"
  },
  "optionalDependencies": {
    "@codemirror/lang-json": "^6.0.1",
    "codemirror-json5": "^1.0.3",
    "json5": "^2.2.3"
  },
  "peerDependencies": {
    "@lezer/common": "^1.0.3",
    "@codemirror/language": "^6.8.0",
    "@codemirror/lint": "^6.4.0",
    "@codemirror/state": "^6.2.1",
    "@codemirror/view": "^6.14.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^0.33.0",
    "codemirror-json5": "^1.0.3",
    "happy-dom": "^10.3.2",
    "json5": "^2.2.3",
    "lefthook": "^1.4.6",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "vitest": "0.33.0",
    "vitest-dom": "^0.1.0",
    "@changesets/cli": "^2.26.2",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.3",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/autocomplete": "^6.8.1",
    "@codemirror/commands": "^6.2.4",
    "codemirror": "^6.0.1"
  },
  "scripts": {
    "dev": "vite ./dev --port 3000",
    "build": "tsc && vite build ./dev --outDir ../public --emptyOutDir && pnpm typedoc",
    "test": "vitest --dom",
    "test:coverage": "vitest run --dom --coverage",
    "version-packages": "changeset version && pnpm prettier:write CHANGELOG.md",
    "release": "pnpm build && changeset publish",
    "typedoc": "typedoc --out docs src/index.ts src/json5.ts && pnpm prettier:write docs/**/*",
    "postinstall": "lefthook install",
    "prettier:write": "prettier --ignore-path .gitignore --write"
  }
}
